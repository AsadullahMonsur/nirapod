<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/persoanl_info_layout_01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_full_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Full Name"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>


            <TextView
                    android:id="@+id/personal_info_full_name_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Edit"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/blue_01"
                    android:textColorHint="@color/blue_01"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/persoanl_info_layout_02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/persoanl_info_layout_01"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_full_name_input_tv"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/white_02"
                    android:text="Jhonson"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
        </RelativeLayout>


        <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/persoanl_info_layout_03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/persoanl_info_layout_02"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_email_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Email Address"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>


            <TextView
                    android:id="@+id/personal_info_email_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Edit"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/blue_01"
                    android:textColorHint="@color/blue_01"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/persoanl_info_layout_04"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/persoanl_info_layout_03"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_email_input_tv"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/white_02"
                    android:text="jhonson@example.com"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/persoanl_info_layout_05"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/persoanl_info_layout_04"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_phone_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Phone Number"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>


            <TextView
                    android:id="@+id/personal_info_phone_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Edit"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/blue_01"
                    android:textColorHint="@color/blue_01"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/persoanl_info_layout_06"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/persoanl_info_layout_05"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_phone_input_tv"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/white_02"
                    android:text="+880-1555-121212 "
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/persoanl_info_layout_07"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/persoanl_info_layout_06"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_address_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Home Address"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>


            <TextView
                    android:id="@+id/personal_info_address_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@color/white"
                    android:text="Edit"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/blue_01"
                    android:textColorHint="@color/blue_01"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_marginTop="10dp"
                android:id="@+id/persoanl_info_layout_08"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/persoanl_info_layout_07"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp">

            <TextView
                    android:id="@+id/personal_info_address_input_tv"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:background="@color/white_02"
                    android:text="123 Safety Street, Dhaka-1212"
                    android:fontFamily="serif-monospace"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"/>
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>
