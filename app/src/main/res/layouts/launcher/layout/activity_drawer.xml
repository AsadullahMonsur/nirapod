<androidx.drawerlayout.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

    <include
            android:id="@+id/toolbar_holder_id"
            layout="@layout/activity_toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

    <LinearLayout
            android:layout_width="312dp"
            android:layout_gravity="start"
            android:layout_height="match_parent"
            android:background="@color/blue_01"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:background="@color/blue_01_trans"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:gravity="center">

                <ImageView
                        android:id="@+id/drawer_header_image"
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:layout_margin="10dp"
                        android:src="@drawable/profile_icon"
                        android:contentDescription="Profile Image or Brand Logo"/>

                <TextView
                        android:id="@+id/drawer_header_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginLeft="150dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="Jhonson"
                        android:fontFamily="serif-monospace"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"/>

                <TextView
                        android:id="@+id/drawer_header_membership_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="150dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="Premium Member"
                        android:fontFamily="serif-monospace"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"/>

                <TextView
                        android:id="@+id/drawer_header_score_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="150dp"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="Safety Score: 90"
                        android:fontFamily="serif-monospace"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"/>

                <TextView
                        android:id="@+id/drawer_header_date_tv"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_alignParentBottom="true"
                        android:gravity="center"
                        android:background="@color/white"
                        android:text="Member since January 2024"
                        android:fontFamily="serif-monospace"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textColor="@color/error"
                        android:textColorHint="@color/error"/>

            </RelativeLayout>

        </LinearLayout>

        <ListView
                android:id="@+id/drawer_menu_holder_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        </ListView>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>